<h1>Add a New Movie</h1>
<%= form_for @movie do |m| %>
  <%= m.label :title %>
  <%= m.text_field :title %>
  <%= m.label :description %>
  <%= m.text_area :description %>
  <%= m.label :year_released %>
  <%= m.text_field :year_released %>
  <%= m.label :rating %>
  <%= m.text_field :rating %>
  <%= m.submit %>
  <% end %>