<h1>Welcome to RetFlix! </h1>
<p>See our collection of movies below</p> 
<%= form_tag '/search', method: :get do %>
  <%= label_tag 'q', "Search" %>
  <%= text_field_tag 'q' %>
  <%= submit_tag 'Search'%>
<% end %>  

<table>
  <tr>
    <th>Movie List</th>
  </tr>
 
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.description %></td>
      <td><%= movie.year_released %></td>
      <td><%= movie.rating %></td>
    </tr>
    </tr> 
    </tr>
  <% end %>
</table>
